			[
				{Toggle = ApexActivation}
				{Toggle = OperationalBuffToggle}
				{Toggle = DisableBuffToggle, invert = true}
			]
			Mode = All
		}
		IsOperational
		{
			Type = MultiToggle
			Toggles
			[
				{Toggle = PowerToggle}
				{Toggle = IndicatorToggle}
			]
			Mode = All
		}
		FtlActivation
		{
			Type = BuffToggle
			BuffType = FtlActivation
		}

