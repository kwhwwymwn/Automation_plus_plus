		FtlOperational
		{
			Type = MultiToggle
			Toggles = [IsOperational, AreaBuffToggle, FtlActivation]
			Mode = All
		}
		FtlIndicator
		{
			Type = MultiToggle
			Toggles = [FtlOperational]
			Invert = true
			Mode = All
		}
		FtlRepeatingTrigger
		{
			Type = Timer
			OperationalToggle = FtlOperational
			Duration = 1
			AutoStart = true
			Repeats = true
