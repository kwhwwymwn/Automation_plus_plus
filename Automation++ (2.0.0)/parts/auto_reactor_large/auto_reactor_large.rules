			GridDistance = 16
			AllowDiagonals = true
			OperationalToggle = SupplyOperational
		}
		SupplyBuffToggle
		{
			Type = BuffToggle
			BuffType = FullSupplyBuff
		}
		SupplyBuffOperational
		{
			Type = MultiToggle
			Toggles
			[
				{Toggle = SupplyOperational}
				{Toggle = SupplyBuffToggle}
			]
			Mode = All
		}
		HiddenComponents
		{
			Type = ToggledComponents
			Toggle = SupplyBuffToggle
			Components
			{
				FullSupplyProvider
				{
					Type = GridBuffProvider
					BuffType = AutoReactorSupply
					BuffAmount = 1
					GridDistance = 16
					AllowDiagonals = true
					OperationalToggle = SupplyBuffOperational
				}
			}
		}
		// ---- REST OF THE CODE ----
		Graphics : &<./Data/ships/terran/reactor_large/reactor_large.rules>/Components/Graphics
